<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddFood">
    <ImageView
        android:layout_margin="8dp"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:tint="@color/color_black"
        android:src="@drawable/ic_action_back"/>
    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Food and nutritional intake"
    android:textStyle="bold"
    android:textColor="@color/color_black"/>
        <View
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_app_txt_black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RECENT"
            android:textStyle="bold"
            android:textColor="@color/color_app_txt_black"/>
<android.support.v7.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rvFood"/>

    </LinearLayout>

    <FrameLayout
        android:layout_marginTop="8dp"
        android:background="#620C0B"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_gravity="center|top"
            android:layout_margin="12dp"
            android:textColor="@color/color_white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"/>
        <LinearLayout
            android:layout_margin="80dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/normal_round_corner" />

        <android.support.v7.widget.CardView
            android:layout_marginRight="8dp"
            android:backgroundTint="#60000000"
            android:layout_gravity="right|center_vertical"
            app:cardCornerRadius="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
<ImageView
    android:layout_margin="8dp"
    android:layout_width="22dp"
    android:layout_height="22dp"
    android:src="@drawable/ic_flash"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_margin="8dp"
            android:textColor="@color/color_white"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Request admin to add food!"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="8dp"
            android:background="#80000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/color_white"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't found ?"/>
            <TextView
                android:textColor="@color/color_white"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Manually"/>
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>