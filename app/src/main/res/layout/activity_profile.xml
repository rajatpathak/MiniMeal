<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fefefe"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_black" >

        <ImageView
            android:id="@+id/icBack"
            android:layout_margin="8dp"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:tint="@color/color_white"
            android:src="@drawable/ic_action_back"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/color_black"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/normal_round_cornertest"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/ic_action_pen"
                        android:tint="#78d9ff"
                        android:padding="4dp"
                        android:background="@drawable/curve"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:background="@drawable/normal_round_cornertestright"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/ic_action_delete"
                        android:tint="@color/color_black"
                        android:padding="4dp"
                        android:backgroundTint="#ff0000"
                        android:background="@drawable/curve"/>
                    <TextView
                        android:layout_marginTop="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"/>
                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/john"
            android:layout_width="100dp"
            android:layout_height="100dp" />
            <TextView
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="Amanda Murphy"/>

        </LinearLayout>
    </FrameLayout>

<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daughter"/>


    <LinearLayout
        android:padding="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"/>
        <VideoView
            android:layout_margin="4dp"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:text="Daughter"/>
        <TextView
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"/>
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROJECTS"
        android:textColor="@color/color_app_txt_black"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cvMealPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        android:layout_margin="8dp">


        <LinearLayout
            android:id="@+id/cardItemll"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/circleImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/color_app_choc"
                android:src="@drawable/ic_food"/>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/color_app_txt_black"
                    android:text="Daily Food Intake"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="invisible"
                    android:text="Height"
                    android:id="@+id/tvHeight"
                    android:textColor="@color/color_app_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title" />

                <TextView
                    android:text="View More"
                    android:id="@+id/tvWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_app_txt_black" />
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cvIntake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:cardElevation="4dp"
        android:layout_margin="8dp">


        <LinearLayout
            android:padding="4dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="fill_parent">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="@color/color_app_choc"
                android:src="@drawable/ic_food_intake"/>

            <LinearLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/color_app_txt_black"
                    android:text="Food Diary"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:visibility="invisible"
                    android:text="Height"
                    android:textColor="@color/color_app_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/title" />

                <TextView
                    android:text="View More"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_app_txt_black" />
            </LinearLayout>



        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


</LinearLayout>